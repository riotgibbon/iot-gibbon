[Unit]
Description=Write to IFTTT
After=multi-user.target

[Service]
ExecStart=/bin/bash -c '/usr/bin/python3 /home/pi/github/iot-gibbon/python/sensors/bme680/bme680_mqtt.py > /home/pi/bme680_mqtt.log 2>&1'
Restart=always
RestartSec=10s
KillMode=process
TimeoutSec=infinity

[Install]
WantedBy=multi-user.target